{
  "compilerOptions": {
    "strict": true,
    "noUncheckedIndexedAccess": false,
    "noImplicitOverride": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "module": "ES2020",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "ES2019",
    "jsx": "react",
    "baseUrl": ".",
    "lib": ["ES2019", "DOM"],
    "paths": {
      "@evans/*": ["../evans/src/components/*"]
    }
  }
}
